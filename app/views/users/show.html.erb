<div class="container">
  <h2><%= @user.name %>がフォローしているユーザー</h2>
  <% @user.followed_users.each do |followed| %>
      <div class="container-child col-md-2 col-sm-4 col-xs-6 ">
        <%= profile_img(followed) %>
        <%= link_to user_path(followed) do%>
          <p><strong><%= followed.name %></strong></p>
        <% end %>
        <%= followed.email %>
      </div>
  <% end %>
</div>

<div class="container">
  <h2><%= @user.name %>のフォロワー</h2>
  <% @user.followers.each do |follower| %>
      <div class="container-child col-md-2 col-sm-4 col-xs-6 ">
        <%= profile_img(follower) %>
        <%= link_to user_path(follower) do%>
          <p><strong><%= follower.name %></strong></p>
        <% end %>
        <%= follower.email %>
      </div>
  <% end %>
</div>
